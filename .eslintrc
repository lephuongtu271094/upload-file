{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "padded-blocks": [
            "error",
            "never"
        ],
        "no-underscore-dangle": "off",
        "max-len": [
            2,
            {
                "code": 250,
                "tabWidth": 4,
                "ignoreUrls": true
            }
        ],
        "import/prefer-default-export": "off",
        "import/no-unresolved": [
            2,
            {
                "caseSensitive": true
            }
        ],
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "class-methods-use-this": 0,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "one-var-declaration-per-line": [
            2,
            "initializations"
        ],
        "no-useless-catch": 0,
        "no-use-before-define": 0,
        "func-names": 0,
        "no-param-reassign": 0,
        "prefer-object-spread": 0,
        "object-curly-newline": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.test.js",
                    "**/*.spec.js"
                ]
            }
        ],
        "camelcase": 0,
        "import/order": ["error", {"newlines-between": "always"}]
    }
}